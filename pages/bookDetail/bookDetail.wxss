page{
    background: #dedede;
}
.morebook-item{
    background: white;
    position: relative;
    display: flex;
    padding:20rpx;
    box-shadow: 0rpx 0rpx 4rpx 2rpx #cccccc;
    margin-bottom: 20rpx;
}
.morebook-img-item{
    width:35%;
    height:290rpx;
    margin-right:20rpx;
}
.morebook-img{
    width:100%;
    height:290rpx;
}
.r-cont{
    width:60%;
}
.morebook-title{
    font-size:32rpx;
    color:#ff8862;
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
    margin-bottom:40rpx;
}
.morebook-detail{
    font-size: 28rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
}
.morebook-pf{
    position: absolute;
    bottom:20rpx;
    color:#b8b6b6;
}
.bookDetail-tag{
    background-color: #ffffff;
    padding: 20rpx;
    margin-bottom: 20rpx;
  }
  .bookDetail-tag-title{
    color: #918f8f;
    font-size: 35rpx;
    margin-bottom: 15rpx;
  }
  .bookDetail-tag-type{
    color: #ff8862;
    font-size: 26rpx;
    border: 2rpx solid #ff8862;
    display: inline-block;
    padding: 6rpx 18rpx;
    border-radius: 30rpx;
    margin-right: 30rpx;
    margin-bottom: 10rpx;
  }

  .bookDetail-content{
    background-color: #ffffff;
    padding: 20rpx;
    margin-bottom: 100rpx;
  }
  .ookDetail-content-title{
    margin-bottom: 20rpx;
  }
  .bookDetail-content-info{
    font-size: 28rpx;
    color: #a7a4a4;
  }
  .bookDetail-show-all{
    color: #1E8AE8;
    font-size: 25rpx;
  }
  .text-overflow{
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:8;
  }
  